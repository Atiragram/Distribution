{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block stylesheets %}
    {# Claroline CSS #}
    {{ parent() }}

    {# Tool styles #}
    {% stylesheets debug=false filter='less, cssmin' output='vendor/claromusicinstrument/tuner.css'
        '@ClarolineMusicInstrumentBundle/Resources/styles/tuner/main.less'
    %}
    <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{# Title of the Page #}
{% block title %}
    {{ 'instrument_tuner' | trans({}, 'tools') }}
{% endblock %}

{# Override breadcrumbs #}
{% block breadcrumb %}
    {{
        macros.breadcrumbs([{
            'icon': 'fa fa-briefcase',
            'name': 'desktop'|trans({}, 'platform'),
            'href': path('claro_desktop_open')
        }, {
            'name': 'instrument_tuner'|trans({}, 'tools'),
            'href': ''
        }])
    }}
{% endblock %}

{# Content of the Page #}
{% block section_panel %}
    {# The react UI will be attached to this element #}
    <div id="instrument-tuner"></div>
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}

    {# Translations #}
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'tools' }) }}"></script>

    <script src="{{ hotAsset('dist/claroline-distribution-plugin-music-instrument-tuner.js') }}"></script>
{% endblock %}
