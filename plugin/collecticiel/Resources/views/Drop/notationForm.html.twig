<form class="form-horizontal" role="form" method="POST"
 action="{{ path('innova_collecticiel_add_notation') }}">
          
    <div class="innova_collecticiel_notation_form container">

        <div class="row">
            <div class="form-group col-md-6">
                {# Bloc "Rappel des instructions ..." #}
                {% if dropzone.instruction != null %}
                    {% include 'InnovaCollecticielBundle:Dropzone:recallInstructionTeacher.html.twig' %}
                {% endif %}
            </div>
            <div class="form-group col-md-6">
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group col-md-6">
                {{ 'Review on'|trans({}, 'innova_collecticiel') }}
            </div>
            <div class="form-group row col-md-6">
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group row col-md-6">
                <table class="table table-responsive table-condensed well table-striped">
                    <tbody class="table">
                        <tr>
                            <td>{{ 'Type'|trans({}, 'innova_collecticiel') }}</td>
                            <td>{{ 'Document'|trans({}, 'innova_collecticiel') }}</td>
                        </tr>
                        <tr>
                            <td>{{ (document.type~'_type')|trans({}, 'innova_collecticiel') }}</td>
                            <td>{{ documentTitle }}</td>
                        </tr>
                      </tbody>
                </table>
            </div>
            <div class="form-group row col-md-6">
            </div>
        </div>

        <div class="row text-left">
            <div class="form-group row col-md-6">
                {{ 'Author'|trans({}, 'innova_collecticiel') }}
                {{ drop.user.firstName }} {{ drop.user.lastName }}
            </div>
            <div class="form-group row col-md-6">
            </div>
        </div>

        {% if dropzone.evaluationType == "notation" %}
            <div class="row text-left">
                <div class="form-group row col-md-6">
                    {{ 'Grade'|trans({}, 'innova_collecticiel') }}
                    <label>
                        <input id="innova_collecticiel_notation_form_note_{{document.id}}" name="innova_collecticiel_notation_form[note]" required="required" min="0" max="9999" class="form-control" type="integer"
                        {% if recordOrTransmitNotation == 0 %}
                            placeholder="{{ notationDocument }}"
                        {% else %}
                            placeholder="{{ '0' }}"
                        {% endif %}>
                    </label>
                    {{ 'Notation Max'|trans({}, 'innova_collecticiel') }}
                    {{ maximumNotation }}
                    {{ ')' }}
                </div>
                <div class="form-group row col-md-6">
                </div>
            </div>
        {% endif %}

        {% if dropzone.evaluationType == "ratingScale" %}

            <div class="row text-left">
                <div class="form-group col-md-6">
                    {{ 'Appreciation'|trans({}, 'innova_collecticiel') }}
                </div>
            </div>

            <div class="row text-left">
                <div class="form-group col-md-6">
                    <select id="innova_collecticiel_notation_form_scaleName_{{document.id}}" name="innova_collecticiel_notation_form[scaleName]" class="form-control">
                        {% if notationAppreciationDocument > 0 %}
                            <option value="0">-----</option>
                            {% for scale in scalesArray %}
                                {% if notationAppreciationDocument == scale.id %}
                                    <option value="{{ scale.id }}" selected="selected">{{ scale.scaleName }}</option>
                                }
                                {% else %}
                                    <option value="{{ scale.id }}">{{ scale.scaleName }}</option>
                                }
                                {% endif %}>
                            {% endfor %}
                        {% else %}
                            <option value="0" selected="selected">-----</option>
                            {% for scale in scalesArray %}
                                <option value="{{ scale.id }}">{{ scale.scaleName }}</option>
                            {% endfor %}
                        {% endif %}>
                    </select>
                </div>
            </div>

            <div class="row text-left">
                <div class="form-group col-md-6">
                    {{ 'Global comment'|trans({}, 'innova_collecticiel') }}
                </div>
            </div>

            <div class="row text-left">
                <div class="form-group col-md-6">
                    <textarea id="innova_collecticiel_notation_form_commentText_{{document.id}}" name="innova_collecticiel_notation_form[commentText]" required="required" class="claroline-tiny-mce hide"
                    {% if recordOrTransmitNotation == 0 %}placeholder="{{ notationCommentDocument }}" {% endif %}
                    >
                    </textarea>
                </div>
            </div>

            <div class="row text-left">
                <div class="form-group col-md-6">
                    {{ 'Quality argument'|trans({}, 'innova_collecticiel') }}
                </div>
            </div>

            <div class="row text-left">
                <div class="form-group col-md-6">
                        <textarea id="innova_collecticiel_notation_form_qualityText_{{document.id}}" name="innova_collecticiel_notation_form[qualityText]" required="required" class="claroline-tiny-mce hide"
                        {% if recordOrTransmitNotation == 0 %}placeholder="{{ notationQualityDocument }}" {% endif %}
                        >
                        </textarea>
                </div>
            </div>
        {% endif %}

    </div>
</form>
