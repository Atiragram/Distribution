{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}
{% block title %}
    {{ parent() ~ ' - ' ~ "ujm_lti_tool_apps" | trans({}, "lti") | striptags | raw }}
{% endblock %}

{% block breadcrumb %}
    {{
    macros.workspaceBreadcrumbs(
    workspace,
    [
    {
        'name': 'ujm_lti_tool_apps'|trans({}, 'lti'),
        'href': ''
    }
    ]
    )
    }}
{% endblock %}

{% block section_content %}

    <table class="table table-bordered">
        <tr>
            <th>{{ 'title' | trans({}, 'lti') }}</th>
            <th>{{ 'description' | trans({}, 'lti') }}</th>
            <th>{{ 'goapp'|trans({}, 'lti') }}</th>
            <th>{{ 'publish'|trans }}</th>
        </tr>
        {% for app in apps %}
            <tr>
                <td>{{ app.title }}</td>
                <td>{{ app.description }}</td>
                <td>
                    <form id="form_app_{{ app.id }}" method="POST" target="lti" action="{{ printfTwig(app.url) }}">
                        {% for key,value in ltiDatas["app_"~app.id] %}
                            <input type="hidden" name="{{ key }}" value="{{ value }}">
                        {% endfor %}
                        <input type="hidden" name="oauth_signature" value="{{ signature["app_"~app.id] }}">
                        <button type="submit"><i class="fa fa-arrow-circle-up" title="{{ 'goapp'|trans({}, 'lti') }}"></i></button>
                    </form>
                </td>
                <td>
                    <a href="{{ path('ujm_lti_publish_app', { 'wsId': workspace.id, 'appId': app.id}) }}"><i class="fa fa-fw fa-share-square-o" title="{{ 'publish'|trans }}"></i></a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <iframe name="lti"  style="height: 700px; width: 100%"></iframe>

{% endblock %}