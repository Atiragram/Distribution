{% extends "ClarolineCoreBundle:Desktop:layout.html.twig" %}

{% block stylesheets %}
    {# Claroline CSS #}
    {{ parent() }}

    {# Tool styles #}
    {% stylesheets debug=false filter='less, cssmin' output='vendor/claromusictheory/references.css'
        '@ClarolineMusicTheoryBundle/Resources/styles/chord/main.less'
        '@ClarolineMusicTheoryBundle/Resources/styles/interval/main.less'
        '@ClarolineMusicTheoryBundle/Resources/styles/note/main.less'
    %}
    <link rel="stylesheet" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{# Title of the Page #}
{% block title %}
    {{ 'claro_music_references' | trans({}, 'tools') }}
{% endblock %}

{# Override breadcrumbs #}
{% block breadcrumb %}
    {{
        macros.breadcrumbs([{
            'icon': 'fa fa-briefcase',
            'name': 'desktop'|trans({}, 'platform'),
            'href': path('claro_desktop_open')
        }, {
            'name': 'claro_music_references'|trans({}, 'tools'),
            'href': ''
        }])
    }}
{% endblock %}

{# Content of the Page #}
{% block section_panel %}
    {# The react UI will be attached to this element #}
    <div id="theory-references"></div>
{% endblock %}

{% block javascripts %}
    {# Claroline JS #}
    {{ parent() }}

    {# Translations #}
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'tools' }) }}"></script>

    <script src="{{ hotAsset('dist/claroline-distribution-plugin-music-theory-references.js') }}"></script>
{% endblock %}
